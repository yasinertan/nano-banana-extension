{
  "manifest_version": 3,
  "name": "Nano Banana Image Recreator",
  "version": "1.3",
  "description": "Right-click an image and recreate it with the Nano Banana AI model.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

